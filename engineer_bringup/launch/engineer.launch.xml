<launch>
    <let name="urdf_path"
         value="$(find-pkg-share engineer_moveit_config)/config/engineer.urdf.xacro"/>
    <let name="rviz_config_path"
         value="$(find-pkg-share engineer_bringup)/config/engineer_moveit.rviz"/>

    <arg name="use_mock_component" default="true" />

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description"
               value="$(command 'xacro $(var urdf_path) use_mock_component:=$(var use_mock_component)')" />
    </node>

    <node pkg="controller_manager" exec="ros2_control_node">
        <param from="$(find-pkg-share engineer_bringup)/config/ros2_controllers.yaml" />
    </node>

    <node pkg="controller_manager" exec="spawner" args="joint_state_broadcaster" />
    <node pkg="controller_manager" exec="spawner" args="arm_controller" />
    <node pkg="controller_manager" exec="spawner" args="gripper_controller" />

    <include file="$(find-pkg-share engineer_moveit_config)/launch/move_group.launch.py" />

    <node pkg="rviz2" exec="rviz2" output="screen" 
          args="-d $(var rviz_config_path)" />
</launch>